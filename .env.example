# ==== REQUIRED (Render) ====
ALLOWED_ORIGINS=["https://lighthearted-froyo-9dd448.netlify.app","http://localhost:5500"]

# Links TTL (seconds) — 5 days
URL_TTL_SECONDS=432000

# Choose ONE style for plan limits:

# A) JSON (recommended — one var)
PLAN_LIMITS_JSON={"free":"4GB","pro":"200GB","promax":"300GB"}

# B) Individual envs (fallback if JSON not set)
#FREE_MAX_FILE_BYTES=4294967296
#PRO_MAX_FILE_BYTES=214748364800
#PROMAX_MAX_FILE_BYTES=322122547200

# Optional: disable header and pick a default plan (then frontend no changes needed)
ENABLE_PLAN_HEADER=true
DEFAULT_PLAN=free

# ==== S3 / R2 ====
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=<your-bucket-name>
S3_ACCESS_KEY_ID=<your-access-key>
S3_SECRET_ACCESS_KEY=<your-secret-key>
S3_FORCE_PATH_STYLE=true

PORT=8080
