# Cloudflare R2 (S3 compatible)
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=<bucket-name>
S3_ACCESS_KEY_ID=<access-key>
S3_SECRET_ACCESS_KEY=<secret-key>
S3_FORCE_PATH_STYLE=true

# App
PORT=8080
ALLOWED_ORIGINS=["https://<tu-sitio-netlify>.netlify.app","http://localhost:5500"]
URL_TTL_SECONDS=86400           # 1 d√≠a
MAX_FILE_BYTES=5368709120       # 5 GB por defecto; sube a 10737418240 para Pro Max (10 GB)
